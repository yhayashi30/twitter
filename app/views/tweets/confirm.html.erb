<div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で、送信する。</h3>
    
    <%= form_for(@tweet) do |f| %>
      <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
      <%= f.hidden_field :context %>
    
      <!-- @blog.titleと@blog.contentとすることで、表示用の値を画面に出力しています。 -->
      <p>内容:<%= @tweet.context %></p>
      <%= f.submit "投稿", class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <%= form_for(@tweet, url: new_tweet_path, method: 'get') do |f| %>
      <%= f.hidden_field :context %>
      <%= f.submit "もどる", name: 'back', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>