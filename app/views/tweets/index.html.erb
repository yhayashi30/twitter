<div class="container">
  <div class="row">    
    <div class='col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1'>
        <p><%= notice %></p>
        <h1>ツイート一覧</h1>
        <%= link_to "ツイートする", new_tweet_path, class: 'btn btn-default' %>
        <% @tweets.each do |tweet| %>
        
            <p><%= tweet.context %></p>
            <%= link_to "ツイートを編集", edit_tweet_path(tweet.id), class: 'btn btn-default btn-sm btn-success' %>
            <%= link_to "削除", tweet_path(tweet.id), method: :delete, data: { confirm:'本当に削除していいですか？' }, class: 'btn btn-default btn-sm btn btn-danger' %>
           
        <% end %>
    </div>
  </div>     
</div>